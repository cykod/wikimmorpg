<% content_for :header do -%>
 <%= javascript_include_tag  'tile_editor' %>
<% end %>

<h1>Editing location</h1>


<% semantic_form_for @location do |form| %>
	<%= form.inputs :name %>
	<p>Location is <%= @location.cols %> X <%= @location.rows %></p>
	
	<div class='definitions'>
		<%= render :partial => 'definitions' %>
	</div>
	
	<div class='table_grid'>
		<%= render :partial => 'edit_grid' %>
	</div>

   <%= form.buttons %>
 <% end %>

<%= link_to 'Back', locations_path %>

<script type='text/javascript'>
TileEditor.activeTile = "<%= @definitions[0].id if @definitions[0] %>";
</script>